#:kivy 2.3.0
StartScreen:

<Widget>:
    font_size: dp(7)
# Define your background color Template
# To simply mix the `BackgroundColor` class with almost any other widget to give it a background.

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

# class to use when creating label with background color
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    # Default the background color for this label

<BackgroundScrollView@ScrollView+BackgroundColor>
    background_color: 0, 0, 0, 0

<StartScreen>:
    # top bar to display current active screen of the app (default is welcome)
    BackgroundLabel:
        id: active_tab_name_label
        pos_hint: {"x":0, "y":0.93}
        size_hint: 1, 0.06
        background_color: 65/255 , 65/255 ,65/255 ,1
        text: "Welcome to App"

    NavigationBar:
        width: root.width


    # main content - title label
    MainStartContent:

<MainStartContent@MDScreen>:
    id: main_start_content
    pos_hint: {"center_x":.5, "center_y":0.41}
    size_hint: 1,0.82
    FitImage:
        canvas:
            Color:
                rgba: 0, 0, 0, .4
            Rectangle:
                size: self.size
                pos: self.pos
        source: "images/start_menu_bg_2.jpg"
    MDBoxLayout:
        Label:
            halign: "center"
            font_size: dp(25)
            font_name: "fonts/Lora-BoldItalic.ttf"
            color: 65/255 ,105/255 ,225/255 ,1
            text: "TASK \nMANAGER"
# scrollabale vertical navigation to display and manage different tabs
<NavigationBar@BackgroundScrollView>:
    id: navigation_bar
    do_scroll_x: True
    do_scroll_y: False
    pos_hint: {"x":0, "y":0.83}
    size_hint: None, 0.09
    background_color: 75/255, 0, 130/255, 1
    GridLayout:
        rows: 1
        spacing: 10
        size_hint_x: None
        width: self.minimum_width
        Label:
            size_hint_x: None
            width: 200
            text: "Daily tasks"
            background_color: 1,0,0,1
        Label:
            size_hint_x: None
            width: 200
            text: "Daily goals"
        Label:
            size_hint_x: None
            width: 200
            text: "Weekly tasks"
        Label:
            size_hint_x: None
            width: 200
            text: "Timer"
        Label:
            size_hint_x: None
            width: 200
            text: "Notes"
        Label:
            size_hint_x: None
            width: 200
            text: "Statistics"
        Label:
            size_hint_x: None
            width: 200
            text: "Calendar"
