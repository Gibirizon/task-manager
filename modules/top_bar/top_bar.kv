#:kivy 2.3.0

<Navigation>:
    orientation: 'vertical'

    TopBar:
        size_hint: 1, 1

    NavigationBar:
        width: root.width

# top app bar to show active tab name and implement some information about the app
<TopBar@MDTopAppBar>:
    id: top_app_bar
    type: "small"
    theme_bg_color: "Custom"
    md_bg_color: "#1F2022"

    MDTopAppBarLeadingButtonContainer:

        MDActionTopAppBarButton:
            icon: "menu"

    MDTopAppBarTitle:
        text: "Welcome to App"
        pos_hint: {"center_x": .5}
        color: 1,1,1,1

    MDTopAppBarTrailingButtonContainer:

        MDActionTopAppBarButton:
            icon: "account-circle-outline"


# scrollabale vertical navigation to display and manage different tabs
<NavigationBar@ScrollView>:
    id: navigation_bar
    do_scroll_x: True
    do_scroll_y: False
    size_hint: None, .6
    GridLayout:
        rows: 1
        # spacing: 10
        size_hint_x: None
        width: self.minimum_width
        NavigationButton:
            text: "Daily Tasks"
            on_press: app.root.ids.sm.change_screen("tasks")
        NavigationButton:
            text: "Daily Goals"
            on_press: app.root.ids.sm.change_screen("goals")
        NavigationButton:
            text: "Timer"
            on_press: app.root.ids.sm.change_screen("timer")
        NavigationButton:
            text: "Weekly Tasks"
            on_press: app.root.ids.sm.change_screen("weekly_tasks")
        NavigationButton:
            text: "Notes"
            on_press: app.root.ids.sm.change_screen("notes")
        NavigationButton:
            text: "Statistics"
            on_press: app.root.ids.sm.change_screen("stats")
        NavigationButton:
            text: "Calendar"
            on_press: app.root.ids.sm.change_screen("calendar")

<NavigationButton@Button>:
    background_normal: ""
    background_color: "#14141c"
    min_state_time: 0.2
    font_size: dp(13)
    markup: True
    style: "text"
    size_hint_x: None
    width: dp(100)
