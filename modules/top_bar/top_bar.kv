#:kivy 2.3.0

<Navigation>:
    font_size: dp(10)
    TopBar:
        id: top_bar

    NavigationBar:
        id: navigation_bar
        width: root.width

# top app bar to show active tab name and implement some information about the app
<TopBar>:
    pos_hint: {"x":0, "y": .4}
    size_hint: 1, .6
    type: "small"
    theme_bg_color: "Custom"
    md_bg_color: "#431cc3"

    MDTopAppBarLeadingButtonContainer:
        spacing: dp(25)
        MDActionTopAppBarButton:
            icon: "arrow-left"
            on_release: app.root.ids.sm.go_back_to_previous_screen()

        MDActionTopAppBarButton:
            icon: "information"

    MDTopAppBarTitle:
        id: top_bar_title
        text: "Menu"
        pos_hint: {"center_x": 0.5}

# scrollabale vertical navigation to display and manage different tabs
<NavigationBar>:
    pos_hint: {"x":0, "y":0}
    size_hint: None, .4

    MDTabsPrimary:
        id: tabs
        pos_hint: {"center_x": .5, "center_y": .5}
        allow_stretch: False

        MDDivider:

<NavigationBarItem>:
    on_release: app.root.nav_button_click(root.tab_name)
    MDTabsItemIcon:
        icon: root.tab_icon
    MDTabsItemText:
        text: app.root.ids.sm.screen_names_to_titles[root.tab_name]
        font_style: "Label"
        role: "small"
