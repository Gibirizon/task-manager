#:kivy 2.3.0

<Navigation>:
    font_size: dp(10)
    TopBar:
        id: top_bar

    NavigationBar:
        id: navigation_bar
        width: root.width

# top app bar to show active tab name and implement some information about the app
<TopBar>:
    pos_hint: {"x":0, "y": .4}
    size_hint: 1, .6
    type: "small"
    theme_bg_color: "Custom"
    md_bg_color: "#431cc3"

    MDTopAppBarLeadingButtonContainer:
        spacing: dp(25)
        MDActionTopAppBarButton:
            icon: "arrow-left"
            on_release: app.root.ids.sm.go_back_to_previous_screen()

        MDActionTopAppBarButton:
            icon: "information"

    MDTopAppBarTitle:
        id: top_bar_title
        text: "Menu"
        pos_hint: {"center_x": 0.5}





# scrollabale vertical navigation to display and manage different tabs
<NavigationBar@ScrollView>:
    pos_hint: {"x":0, "y":0}
    size_hint: None, .4
    do_scroll_x: True
    do_scroll_y: False
    GridLayout:
        rows: 1
        # spacing: 10
        size_hint_x: None
        width: self.minimum_width
        NavigationButton:
            text: "Menu"
            on_press: app.root.nav_button_click("menu", self.text)
        NavigationButton:
            text: "Daily Tasks"
            on_press: app.root.nav_button_click("tasks", self.text)
        NavigationButton:
            text: "Daily Goals"
            on_press: app.root.nav_button_click("goals", self.text)
        NavigationButton:
            text: "Timer"
            on_press: app.root.nav_button_click("timer", self.text)
        NavigationButton:
            text: "Weekly Tasks"
            on_press: app.root.nav_button_click("weekly_tasks", self.text)
        NavigationButton:
            text: "Notes"
            on_press: app.root.nav_button_click("notes", self.text)
        NavigationButton:
            text: "Statistics"
            on_press: app.root.nav_button_click("stats", self.text)
        NavigationButton:
            text: "Calendar"
            on_press: app.root.nav_button_click("calendar", self.text)

<NavigationButton@Button>:
    background_normal: ""
    background_color: "#181818"
    min_state_time: 0.2
    font_size: dp(13)
    size_hint_x: None
    width: dp(100)
