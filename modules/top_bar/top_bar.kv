#:kivy 2.3.0

<Navigation>:
    font_size: dp(10)

    # orientation: 'vertical'

    TopBar:
        id: top_bar

    NavigationBar:
        id: navigation_bar
        width: root.width
    # Label:
    #     size_hint_y: None
    #     height: dp(0.1)

# top app bar to show active tab name and implement some information about the app
<TopBar@MDTopAppBar>:
    pos_hint: {"x":0, "y": .4}
    size_hint: 1, .6
    type_height: "small"

    md_bg_color: "#1F2022"
    title: "Menu"
    left_action_items: [["arrow-left", lambda x: app.root.ids.sm.go_back_to_previous_screen()]]
    right_action_items:[["information"]]



# scrollabale vertical navigation to display and manage different tabs
<NavigationBar@ScrollView>:
    pos_hint: {"x":0, "y":0}
    size_hint: None, .4
    do_scroll_x: True
    do_scroll_y: False
    GridLayout:
        rows: 1
        # spacing: 10
        size_hint_x: None
        width: self.minimum_width
        NavigationButton:
            text: "Menu"
            on_press: app.root.nav_button_click("menu", self.text)
        NavigationButton:
            text: "Daily Tasks"
            on_press: app.root.nav_button_click("tasks", self.text)
        NavigationButton:
            text: "Daily Goals"
            on_press: app.root.nav_button_click("goals", self.text)
        NavigationButton:
            text: "Timer"
            on_press: app.root.nav_button_click("timer", self.text)
        NavigationButton:
            text: "Weekly Tasks"
            on_press: app.root.nav_button_click("weekly_tasks", self.text)
        NavigationButton:
            text: "Notes"
            on_press: app.root.nav_button_click("notes", self.text)
        NavigationButton:
            text: "Statistics"
            on_press: app.root.nav_button_click("stats", self.text)
        NavigationButton:
            text: "Calendar"
            on_press: app.root.nav_button_click("calendar", self.text)

<NavigationButton@Button>:
    background_normal: ""
    background_color: "#14141c"
    min_state_time: 0.2
    font_size: dp(13)
    markup: True
    style: "text"
    size_hint_x: None
    width: dp(100)
