<RightIcons>:
    MDIconButton:
        pos_hint: {"x":0.8, "center_y":0.5}
        icon_size: dp(22)
        icon: "notebook-edit"

    MDIconButton:
        pos_hint: {"x":0.9, "center_y":0.5}
        icon_size: dp(22)
        icon: "trash-can"

<DialogContent>:
    orientation: "vertical"
    size_hint_y: None
    height: "150dp"
    spacing: dp(10)

    MDTextField:
        id: task_name_field
        hint_text: "enter a task name"
        on_text_validate: app.root.ids.sm.get_screen("tasks").add_task()


    MDGridLayout:
        cols:2
        MDLabel:
            text: f"Start: {root.start_time}"
        MDLabel:
            text: f"Finish: {root.finish_time}"
        MDIconButton:
            icon: "clock-time-two"
            on_release: root.show_time_picker(root.start_time)
        MDIconButton:
            icon: "clock-time-two"
            on_release: root.show_time_picker(root.finish_time)
