#:kivy 2.3.0


<Tasks>:
    name: "tasks"

    ScrollView:
        id: scroll
        pos_hint: {"center_x":0.5, "top":1}
        size_hint: .9,.8
        MDList:
            id: list_container

    MDFloatingActionButton:
        pos_hint: {"center_x":0.5, "center_y": 0.1}
        icon: "plus-thick"
        icon_size: dp(25)
        md_bg_color: "#8A2BE2"
        on_release : root.open_dialog()

