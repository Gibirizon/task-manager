#:kivy 2.3.0

# :import BackgroundLabel modules.additional_classes.additional_classes.BackgroundLabel

<Menu>:
    name: "menu"
    size_hint_y: 0.98
    FitImage:
        canvas:
            Color:
                rgba: 0, 0, 0, .4
            Rectangle:
                size: root.size
                pos: root.pos
        source: "images/start_menu_bg.jpg"


    # main content - title label
    MainStartContent:

<MainStartContent@MDBoxLayout>:
    id: main_start_content
    MDLabel:
        text: "TASK \nMANAGER"
        halign: "center"
        text_color: "#E26310"
        font_style: "lora"
        role: "medium"
