#:kivy 2.3.0

<Menu>:
    name: "menu"
    size_hint_y: 0.98

    # Background image for the menu with a semi-transparent overlay
    FitImage:
        canvas:
            Color:
                rgba: 0, 0, 0, .4  # Semi-transparent overlay color
            Rectangle:
                size: root.size  # Cover the entire menu
                pos: root.pos  # Position to cover the entire menu
        source: "images/start_menu_bg.jpg"  # Background image source

    # Main content of the menu - contains the title label
    MainStartContent:

<MainStartContent@MDBoxLayout>:
    id: main_start_content
    MDLabel:
        text: "TASK \nMANAGER"
        halign: "center"
        text_color: "#f5f5dc"
        font_style: "lora"
        role: "medium"
